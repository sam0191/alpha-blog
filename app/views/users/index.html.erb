<h1 align="center">All Alpha Bloggers</h1>
<div class="row">
	<div class="col-md-4 col-md-offset-4 ">
		<div align="center">
			<%= will_paginate %>
		</div>
		<% @users.each do |user| %>
			<div class="well well-lg">
				<ul class="text-center list-unstyled">
					<li><%= link_to gravatar_for(user), user_path(user) %></li>
					<li><%= link_to user.username, user_path(user) %></li>
					<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
					<% if logged_in? and current_user.admin? %>
						<li><%= link_to "Delete this user", user_path(user), method: :delete,                 	data: { confirm: "Are you sure you want to delete the user and all his articles?" } %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<div align="center">
			<%= will_paginate %>
		</div>
	</div>
</div>

