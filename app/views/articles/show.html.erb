<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<h2 class="text-center"> Title: <%= @article.title %> </h2>
		<div class="well">
			<ul class="text-center list-unstyled">
				<li>Created by:</li>
				<li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
				<li class="font-sz"><%= link_to @article.user.username, user_path(@article.user) %></li>
				<li><small>
				<%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
				</small></li>
			</ul>
			<h4 class="text-center description"><strong>Description:</strong></h4>
			<hr> 			
			<%= simple_format(@article.description) %>
			<div class="article-actions">
				<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
				<%= link_to "Delete this article", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete the article?"}, class: "btn btn-xs btn-danger" %>
				<%= link_to "Back to article listing", articles_path, class: "btn btn-xs btn-success" %>
			</div>
		</div>
	</div>
</div>