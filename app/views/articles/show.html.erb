<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<h2 class="text-center"> Title: <%= @article.title %> </h2>
		<div class="well">
			<h4 class="text-center description"><strong>Description:</strong></h4>
			<hr> 			
			<%= simple_format(@article.description) %>
			<div class="article-actions">
				<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
				<%= link_to "Delete this article", article_path(@article), method: :delete, data: { confrim: "Are you sure you want to delete the article?"}, class: "btn btn-xs btn-danger" %>
				<%= link_to "Back to article listing", articles_path, class: "btn btn-xs btn-success" %>
			</div>
		</div>
	</div>
</div>