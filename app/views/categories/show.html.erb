<h1 class="text-center"><%= "Category: " + @category.name %></h1>
<div align="center">
	<% if logged_in? && current_user.admin? %>
		<div class="row">
			<span class="badge"><%= link_to "Edit this category", edit_category_path(@category) %></span>
		</div>
	<% end %>
	<%= will_paginate @category_articles %>
</div>
<%= render 'articles/articles', obj: @category_articles %>
<div align="center">
	<%= will_paginate @category_articles %>
</div>
